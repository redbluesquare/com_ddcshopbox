			label="COM_DDC_DAY_4_CLOSE_TIME_LABEL"
			description="COM_DDC_DAY_4_OPEN_DESC"
			default="16:00"
		/>
		<field
			name="day_5_open"
			type="list"
			label="COM_DDC_DAY_5_OPEN_LABEL"
			description="COM_DDC_DAY_5_OPEN_DESC"
			default="1"
