<?xml version="1.0" encoding="utf-8"?>
<form>
	<fieldset name="main_top">
		<field
			name="ddc_recipe_header_id"
			type="text"
			label="COM_DDC_ID_LABEL"
			description="COM_DDC_ID_DESC"
			readonly="true"
			class="form-control col-xs-6"
		/>
		<field
			name="title"
			type="text"
			label="COM_DDC_TITLE_LABEL"
			description="COM_DDCDDC_TITLE_DESC"
			class="form-control"
		/>
		<field
			name="alias"
			type="text"
			label="COM_DDC_ALIAS_LABEL"
			description="COM_DDCDDC_ALIAS_DESC"
			class="form-control"
		/>
		<field
			name="description"
			type="editor"
			label="COM_DDC_RECIPE_DESCRIPTION_LABEL"
			description="COM_DDC_RECIPE_DESCRIPTION_DESC"
			filter="safehtml"
			rows="10"
			max-height="200px"
		/>
	</fieldset>
	<fieldset name="main_bottom">
	    <field
			name="image_link"
			type="url"
			label="COM_DDC_IMAGE_LABEL"
			description="COM_DDC_IMAGE_DESC"
			class="form-control"
		/>
	     <field
			name="ddc_image_id"
			type="hidden"
			label="COM_DDC_ID_LABEL"
			description="COM_DDC_ID_DESC"
		/>
	     <field
			name="link_id"
			type="hidden"
			label="COM_DDC_ID_LABEL"
			description="COM_DDC_ID_DESC"
		/>
	     <field
			name="link_table"
			type="hidden"
			label="COM_DDC_ID_LABEL"
			description="COM_DDC_ID_DESC"
			default="ddc_recipe"
		/>
	    <field
			name="method"
			type="textarea"
			label="COM_DDC_RECIPE_METHOD_LABEL"
			description="COM_DDC_RECIPE_METHOD_DESC"
			filter="safehtml"
			rows="10"
			cols="50"
			class="form-control"
		/>
	</fieldset>
	<fieldset name="main_right">
		<field
			name="prep_time"
			type="number"
			label="COM_DDC_PREPARATION_TIME_LABEL"
			description="COM_DDC_PREPARATION_TIME_DESC"
			class="form-control"
			min="0"
			max="900"
			step="5"
			default="10"
		/>
		<field
			name="cook_time"
			type="number"
			label="COM_DDC_COOKING_TIME_LABEL"
			description="COM_DDC_COOKING_TIME_DESC"
			class="form-control"
			min="0"
			max="900"
			step="5"
			default="10"
		/>
		<field
			name="serving_qty"
			type="number"
			label="COM_DDC_TOWN_LABEL"
			description="COM_DDC_TOWN_DESC"
			class="form-control"
			min="0"
			max="90"
			step="1"
			default="2"
		/>
	    <field
			name="catid"
			type="sql"
			default="0"
			label="COM_DDC_CATEGORY_LABEL"
			description="COM_DDC_CATEGORY_DESC"
			query="SELECT id AS value, title as catid FROM #__categories WHERE extension ='com_ddcshopbox' AND parent_id = '61' "
			class="form-control"
		>
			<option>-</option>
		</field>
		<field
			name="author"
			type="text"
			label="COM_DDC_AUTHOR_LABEL"
			description="COM_DDC_AUTHOR_DESC"
			class="form-control"
		/>
		<field name="state" 
		    type="list" 
		    label="JSTATUS"
			description="JFIELD_PUBLISHED_DESC" 
			class="chzn-color-state form-control"
			filter="intval" 
			size="1" 
			default="1"
		>
			<option value="1">
				JPUBLISHED</option>
			<option value="0">
				JUNPUBLISHED</option>
			<option value="-2">
				JTRASHED</option>
		</field>
		<field
			name="table"
			type="text"
			label="COM_DDC_TABLE_LABEL"
			description="COM_DDC_TABLE_DESC"
			hidden="true"
			class="hidden"
			default="recipeheaders"
		/>
	</fieldset>
</form>
