<?xml version="1.0" encoding="utf-8"?>
<form>
	<fieldset name="profile_address">
		<field name="address" type="textarea"
			label="COM_DDC_ADDRESS_LABEL"
			description="COM_DDC_ADDRESS_DESC"
			rows="3"
			cols="30"
		/>
		<field name="suburb" type="text"
			label="COM_DDC_SUBURB_LABEL"
			description="COM_DDC_SUBURB_DESC"
			size="30"
		/>
		<field name="state" type="text"
			placeholder="COM_DDC_STATE_LABEL"
			description="COM_DDC_STATE_DESC"
			size="30"
		/>
		<field name="postcode" type="text"
			placeholder="COM_DDC_POSTCODE_LABEL"
			description="COM_DDC_POSTCODE_DESC"
			size="30"
		/>
		<field name="country" type="text"
			placeholder="COM_DDC_COUNTRY_LABEL"
			description="COM_DDC_COUNTRY_DESC"
			size="30"
		/>
		<field name="telephone" type="text"
			label="COM_DDC_TELEPHONE_LABEL"
			description="COM_DDC_TELEPHONE_DESC"

			size="30"
		/>
		<field name="mobile" type="text"
			label="COM_DDC_MOBILE_LABEL"
			description="COM_DDC_MOBILE_DESC"
			size="30"
		/>
		<field name="email_to" type="text"
			label="COM_DDC_EMAIL_TO_LABEL"
			description="COM_DDC_EMAIL_TO_DESC"
			size="30"
		/>
		<field
			name="contact_id"
			type="hidden"
			label="COM_DDC_ID_LABEL"
			description="COM_DDC_ID_DESC"
			readonly="true"
		/>
	</fieldset>
	<fieldset name="get_interest">
	    <field name="firstname" type="text"
			label="COM_DDC_FIRSTNAME_LABEL"
			description="COM_DDC_FIRSTNAME_DESC"
			size="20" maxlength="30"
			class="form-control"
		/>
	    <field name="lastname" type="text"
			label="COM_DDC_LASTNAME_LABEL"
			description="COM_DDC_LASTNAME_DESC"
			size="20" maxlength="30"
			class="form-control"
		/>
	    <field name="email_to" type="text"
			label="COM_DDC_EMAIL_TO_LABEL"
			description="COM_DDC_EMAIL_TO_DESC"
			size="40" maxlength="100"
			class="form-control"
		/>
	    <field name="town" type="text"
			label="COM_DDC_TOWN_LABEL"
			description="COM_DDC_TOWN_DESC"
			size="30"
			class="form-control"
 		/>
	    <field name="local_shop_1" type="text"
			label="COM_DDC_LOCAL_SHOP_1_LABEL"
			description="COM_DDC_LOCAL_SHOP_1_DESC"
			size="30" maxlength="50"
			class="form-control"
		/>
	    <field name="local_shop_2" type="text"
			label="COM_DDC_LOCAL_SHOP_2_LABEL"
			description="COM_DDC_LOCAL_SHOP_2_DESC"
			size="30" maxlength="50"
			class="form-control"
		/>
	    <field name="local_shop_3" type="text"
			label="COM_DDC_LOCAL_SHOP_3_LABEL"
			description="COM_DDC_LOCAL_SHOP_3_DESC"
			size="30" maxlength="50"
			class="form-control"
		/>
	    <field name="comment" type="textarea"
			label="COM_DDC_COMMENT_LABEL"
			description="COM_DDC_COMMENT_DESC"
			size="30"
			cols="30"
			rows="5"
			class="form-control"
		/>
	    
	</fieldset>

</form>
